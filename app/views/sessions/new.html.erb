<% provide (:title) {"Giriş yap"} %>
<h1>Giriş yap</h1>
<%= form_for :session, url: sessions_path, html: {class: "form-horizontal", role: "form"} do |f| %>
  <div class="form-group">
    <%= f.label :email, "E-mail adresi", class: "col-md-3 control-label" %>
    <div class="col-md-6">
      <%= f.text_field :email, class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :password, "Şifre", class: "col-md-3 control-label" %>
    <div class="col-md-6">
      <%= f.password_field :password, class: "form-control" %>
    </div>
  </div> 
  <%= f.submit "Giriş yap", class: "btn btn-lg btn-primary col-md-offset-3" %>
<% end %>
<p class="col-md-offset-3"><%= link_to "Üye değil misiniz?", kayit_path %></p>
