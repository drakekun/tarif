<header class="navbar navbar-fixed-top navbar-inverse" role="navigation">
  <div class="container">
    <div class="navbar-header">
      <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
        <span class="sr-only">Menüyü aç</span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
      </button>
      <%= link_to "Tarif", root_path, id: "logo" %>
    </div>
    <div class="navbar-collapse collapse">
      <ul class="nav navbar-nav navbar-right">
        <li><%= link_to "Ana Sayfa", root_path %></li>
        <% if signed_in? %>
          <li><%= link_to "Yeni Tarif",	"#" %></li>
          <li><%= link_to "Tariflerim",	"#" %></li>
          <li><%= link_to "Kullanıcılar", users_path %></li>
          <li class="dropdown">
            <a href="#" class="dropdown-toggle" data-toggle="dropdown"><span class="glyphicon glyphicon-cog"></span></a>
              <ul class="dropdown-menu">
                <li><%= link_to "Profil", user_path(current_user) %></li>
                <li><%= link_to "Ayarlar", edit_user_path(current_user) %></li>
                <li class="divider"></li>
                <li><%= link_to "Çıkış", cikis_path, method: "delete" %>
              </ul>
          </li>
        <% else %>
          <li class="dropdown">
            <a href="#" class="dropdown-toggle" data-toggle="dropdown">Giriş yap</a>
            <div class="dropdown-menu" style="padding:20px;">
              <p><b>Giriş yap</b></p>
              <%= form_for :session, url: sessions_path, html: {class: "form", role: "form"} do |f| %>
                <div class="form-group">
                  <%= f.text_field :email, class: "form-control", placeholder: "E-mail" %>
                </div>
                <div class="form-group">
                  <%= f.password_field :password, class: "form-control", placeholder: "Şifre" %>
                </div>
                <%= f.submit "Giriş yap", class: "btn btn-large btn-primary" %>
              <% end %>
              <p><%= link_to "Üye değil misiniz?", kayit_path %></p>
            </div>
          </li>
        <% end %>  
      </ul>
    </div>
  </div>
</header>
